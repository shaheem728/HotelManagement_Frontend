{
    "version": 2,
    "builds": [
      {
        "src": "backend/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/",
        "dest": "/api/"
      },
      {
        "src": "/(.*)",
        "dest": "backend/wsgi.py"
      }
    ],
    "rewrites":[
      {"source":"/(.*)","destination":"/"}
    ]
  }